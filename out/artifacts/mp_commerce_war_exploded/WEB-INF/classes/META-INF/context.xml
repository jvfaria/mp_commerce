<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <!-- Specify a JDBC datasource -->
    <Resource name="jdbc/mpcommerce"
              auth="Container"
              type="javax.sql.DataSource"
              username="postgres"
              password="postgres"
              driverClassName="org.hibernate.jdbc.Driver"
              url="jdbc:postgresql://localhost/mpcommerce"
              validationQuery="select 1"
              maxActive="10"
              maxIdle="4"/>

    <!-- Specify the security realm and location of the users file
    <Realm className="org.apache.catalina.realm.MemoryRealm"
           pathname="/tomcat/webapps/ROOT/WEB-INF/users.xml" />
    -->
</Context>